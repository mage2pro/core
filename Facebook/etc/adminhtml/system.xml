<?xml version='1.0'?>
<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd"
>
    <system>
        <!--
            2015-07-10
            Минимальная длина идентификатора tab — 3 символа:
            https://github.com/magento/magento2/blob/1.0.0-beta/app/code/Magento/Config/etc/system_file.xsd#L405
            Поэтому ставим символ подчёркивания вначале.
        -->
        <tab id='_df' translate='label' sortOrder='-100'>
            <label>Mage2.PRO</label>
        </tab>
        <section
            id='dfe_facebook'
            translate='label'
            type='text'
            showInDefault='1'
            showInWebsite='1'
            showInStore='1'
        >
            <tab>_df</tab>
            <label>Facebook</label>
            <class>separator-top</class>
            <!--
                2015-10-05
                https://mage2.pro/t/114
            -->
            <resource>Dfe_Facebook::config</resource>
            <group
                id='credentials'
                translate='label'
                type='text'
                sortOrder='1'
                showInDefault='1'
                showInWebsite='1'
                showInStore='0'
            >
                <label>OAuth Credentials</label>
                <field
                    id='app_id'
                    translate='label'
                    type='text'
                    sortOrder='1'
                    showInDefault='1'
                    showInWebsite='1'
                    showInStore='0'
                >
                    <label>App ID</label>
                    <comment><![CDATA[<a href='https://discourse.pro/t/15'>how to get it?</a>]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>